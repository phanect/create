{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "",
  <% if (type === "lib") { %>
  "keywords": [],
  <% } %>
  "author": "<%- owner === 'personal' ? 'Jumpei Ogawa (https://phanective.org)' : 'Geolonia, Inc. (https://geolonia.com)' %>",
  "license": "<%= license %>",
  <% if (type === "app") { %>
  "private": true,
  <% } %>
  "type": "module",
  <% if (type === "lib" || env === "node") { %>
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/types/main.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/main.mjs",
        "types": "./dist/types/main.d.ts"
      },
      "require": "./dist/main.cjs"
    }
  },
  <% } %>
  "scripts": {
    <% if (env === "browser") { %>
    "dev": "vite",
    <%
    } else if (
      lang === "javascript" &&
      env === "node" &&
      type === "app"
    ) {
    %>
    "dev": "node main.ts",
    <%
    } else if (
      lang === "typescript" &&
      env === "node" &&
      type === "app"
    ) {
    %>
    "dev": "esno main.ts",
    <% } %>
    "build": "vite build",
    "lint": "eslint --ext=.js,.jsx,.ts,.tsx,.vue,.json .",
    <% if (type === "lib") { %>
    "release": "npm publish --access public --non-interactive",
    <% } %>
    "test": "jest --verbose"
  },
  "dependencies": {},
  "devDependencies": {},
  "engines": {
    "node": "<%= (type === 'lib') ? '>=18.x' : '22.x' %>",
    "npm": "<%= (type === 'lib') ? '>=9.x' : '>=10.x' %>"
  }
}
