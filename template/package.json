{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "",
  <% if (type === "lib") { %>
  "keywords": [],
  <% } %>
  "author": "Jumpei Ogawa <%- owner === "personal" ? "<phanective@gmail.com>" : "<jumpei.ogawa@spelldata.co.jp>" %>",
  "license": "<%= license %>",
  <% if (type === "app") { %>
  "private": true,
  <% } %>
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "type": "module",
  <% if (type === "lib" || env === "node") { %>
  "main": "main.cjs",
  "module": "main.js",
  <% } %>
  "scripts": {
    <% if (env === "browser") { %>
    "dev": "webpack-dev-server",
    "build:stg": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    <%
    } else if (
      lang === "javascript" &&
      env === "node" &&
      type === "app"
    ) {
    %>
    "dev": "node main.ts",
    <%
    } else if (
      lang === "typescript" &&
      env === "node" &&
      type === "app"
    ) {
    %>
    "dev": "ts-node main.ts",
    <%
    }
    if (env === "node" && lang === "typescript") {
    %>
    "build": "tsc",
    <% } %>
    "lint": "eslint --ext=.js,.jsx,.ts,.tsx,.vue,.json .",
    <% if (type === "lib") { %>
    "release": "npm publish --access public --non-interactive",
    <% } %>
    "test": "jest --verbose"
  },
  "dependencies": {},
  "devDependencies": {}
}
