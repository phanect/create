{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "",
  <% if (type === "lib") { %>
  "keywords": [],
  <% } %>
  "author": "Jumpei Ogawa <%- owner === "personal" ? "<phanective@gmail.com>" : "<jumpei.ogawa@spelldata.co.jp>" %>",
  <% if (type === "lib") { %>
  "license": "CC0",
  <% } else {%>
  "private": true,
  <% } %>
  "main": "main.js",
  "scripts": {
    <% if (env === "browser") { %>
    "dev": "webpack-dev-server",
    "build:stg": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    <%
    } else if (
      lang === "javascript" &&
      env === "node" &&
      type === "app"
    ) {
    %>
    "dev": "node main.ts",
    <%
    } else if (
      lang === "typescript" &&
      env === "node" &&
      type === "app"
    ) {
    %>
    "dev": "ts-node main.ts",
    <%
    }
    if (env === "node" && lang === "typescript") {
    %>
    "build": "tsc",
    <% } %>
    "lint": "eslint --ext=.js,.jsx,.ts,.tsx .",
    "release": "npm publish --access public --non-interactive",
    "test": "jest --verbose"
  },
  "dependencies": {},
  "devDependencies": {}
}
