{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "",
  <% if (type === "lib") { %>
  "keywords": [],
  <% } %>
  "author": "<%- owner === 'personal' ? 'Jumpei Ogawa (https://phanective.org)' : 'bellFace, Inc. (https://bell-face.com)' %>",
  "license": "<%= license %>",
  <% if (type === "app") { %>
  "private": true,
  <% } %>
  "type": "module",
  <% if (type === "lib" || env === "node") { %>
  "main": "main.cjs",
  "module": "main.js",
  <% } %>
  "scripts": {
    <% if (env === "browser") { %>
    "dev": "webpack-dev-server",
    "build:stg": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    <%
    } else if (
      lang === "javascript" &&
      env === "node" &&
      type === "app"
    ) {
    %>
    "dev": "node main.ts",
    <%
    } else if (
      lang === "typescript" &&
      env === "node" &&
      type === "app"
    ) {
    %>
    "dev": "ts-node main.ts",
    <%
    }
    if (env === "node" && lang === "typescript") {
    %>
    "build": "tsc",
    <% } %>
    "lint": "eslint --ext=.js,.jsx,.ts,.tsx,.vue,.json .",
    <% if (type === "lib") { %>
    "release": "npm publish --access public --non-interactive",
    <% } %>
    "test": "jest --verbose"
  },
  "dependencies": {},
  "devDependencies": {},
  "engines": {
    "node": "<%= (type === 'lib') ? '>=14.x' : '18.x' %>",
    "npm": "<%= (type === 'lib') ? '>=7.x' : '>=8.x' %>"
  }
}
